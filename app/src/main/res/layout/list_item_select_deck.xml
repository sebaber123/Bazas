<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/deck"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/spanish_deck" />

    <TextView
        android:id="@+id/text_deck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mazo de truco"
        android:textSize="18dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/deck"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/quantity_of_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(40 cartas)"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/text_deck"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/deck"
        />

    <Button
        android:id="@+id/select_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deck"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/teal_200"
        android:text="Seleccionar" />


</RelativeLayout>