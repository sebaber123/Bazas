<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/dividerTop"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:background="@color/background_color" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/dividerTop"
            android:background="@drawable/rounded_corners_item_load_game"
            android:padding="15dp">


            <TextView
                android:id="@+id/date_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Fecha:"
                android:textSize="22dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/date_line_text"
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_alignBottom="@+id/date_game"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/load_button"
                android:layout_toRightOf="@+id/date_game"
                android:background="@color/teal_200" />

            <TextView
                android:id="@+id/date_game_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/date_line_text"
                android:layout_alignLeft="@id/date_line_text"
                android:layout_marginLeft="8dp"
                android:text="a Date"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/players_quantity_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_game"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:text="Jugadores:"
                android:textSize="22dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/players_quantity_line_text"
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_alignBottom="@+id/players_quantity_game"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/load_button"
                android:layout_toRightOf="@+id/players_quantity_game"
                android:background="@color/teal_200" />

            <TextView
                android:id="@+id/players_quantity_game_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/players_quantity_line_text"
                android:layout_alignLeft="@id/players_quantity_line_text"
                android:layout_marginLeft="8dp"
                android:text="a Number"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/rounds_quantity_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/players_quantity_game"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:text="Rondas:"
                android:textSize="22dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/rounds_quantity_line_text"
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_alignBottom="@+id/rounds_quantity_game"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/load_button"
                android:layout_toRightOf="@+id/rounds_quantity_game"
                android:background="@color/teal_200" />

            <TextView
                android:id="@+id/rounds_quantity_game_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/rounds_quantity_line_text"
                android:layout_alignLeft="@id/rounds_quantity_line_text"
                android:layout_marginLeft="8dp"
                android:text="a Number"
                android:textSize="18dp" />


            <Button
                android:id="@+id/load_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/date_game"
                android:layout_alignBottom="@id/rounds_quantity_game"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_20_corners_teal_200_background"
                android:backgroundTint="@color/teal_200"
                android:text="Cargar" />


        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>