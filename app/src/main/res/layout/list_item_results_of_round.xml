<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:layout_below="@+id/result_spinner">

    <TextView
        android:id="@+id/player_name_text"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:textSize="18dp"
        android:text="Jugador"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp" />

    <View
        android:id="@+id/divider0"
        android:layout_width="1dp"
        android:layout_marginRight="240dp"
        android:layout_alignParentRight="true"
        android:layout_height="60dp"
        android:background="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/bet_text"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="18dp"
        android:text="ApostÃ³"
        android:textColor="@color/black"
        android:layout_toLeftOf="@id/divider1"
        android:gravity="center"
        />

    <View
        android:id="@+id/divider1"
        android:layout_width="1dp"
        android:layout_marginRight="180dp"
        android:layout_alignParentRight="true"
        android:layout_height="60dp"
        android:background="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/done_text"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="18dp"
        android:text="Hizo"
        android:textColor="@color/black"
        android:layout_toLeftOf="@id/divider4"
        android:gravity="center"
        />

    <View
        android:id="@+id/divider4"
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_marginRight="120dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/points_of_round_text"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="18dp"
        android:text="Puntos"
        android:textColor="@color/black"
        android:layout_toLeftOf="@id/divider2"
        android:gravity="center"
        />

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/subtotal_points_text"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textSize="18dp"
        android:text="Sub-&#10;Total"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:gravity="center"
        />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/player_name"
        android:background="@android:color/holo_blue_light" />


</RelativeLayout>